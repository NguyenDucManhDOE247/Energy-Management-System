<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
<script>
    // Sample chart data
    const ctx = document.getElementById('energyChart').getContext('2d');
    const energyChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
            datasets: [{
                label: 'Energy Consumption (kWh)',
                data: [5.2, 4.8, 6.3, 5.7, 7.1, 8.5, 6.9],
                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                borderColor: 'rgba(78, 115, 223, 1)',
                borderWidth: 2,
                pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                tension: 0.3
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        drawBorder: false
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

    // Initialize device table
    function updateDeviceTable(devices) {
        const deviceTable = $('#deviceTable').find('tbody');
        deviceTable.empty();
        
        if (devices && devices.length > 0) {
            devices.forEach(function(device) {
                const status = device.status && device.status.online ? 
                    (device.status.state ? 'Active' : 'Inactive') : 'Offline';
                const power = device.status && device.status.state ? 
                    (device.power || device.status.power || Math.floor(Math.random() * 150 + 50)) + ' W' : 'N/A';
                
                const badgeClass = status === 'Active' ? 'badge-success' : 
                                  (status === 'Inactive' ? 'badge-warning' : 'badge-secondary');
                
                deviceTable.append(`
                    <tr>
                        <td><strong>${device.name}</strong></td>
                        <td><span class="badge ${badgeClass}">${status}</span></td>
                        <td><span class="text-${status === 'Active' ? 'primary' : 'muted'}">${power}</span></td>
                    </tr>
                `);
            });
        } else {
            deviceTable.append(`
                <tr>
                    <td colspan="3" class="text-center">No devices found</td>
                </tr>
            `);
        }
    }

    // Sample device data to use when API fails
    const sampleDevices = [
        {
            id: "device1",
            name: "Living Room Smart Plug",
            type: "tuya",
            status: {
                state: true,
                online: true,
                last_updated: new Date().toISOString()
            },
            power: 85
        },
        {
            id: "device2",
            name: "Kitchen Smart Plug",
            type: "tuya",
            status: {
                state: false,
                online: true,
                last_updated: new Date().toISOString()
            },
            power: 0
        },
        {
            id: "device3",
            name: "Bedroom Light",
            type: "tapo",
            status: {
                state: true,
                online: true,
                last_updated: new Date().toISOString()
            },
            power: 45
        }
    ];

    // Load initial device data
    $.get('/api/proxy/devices', function(data) {
        console.log('Initial devices:', data);
        if (data && data.length > 0) {
            updateDeviceTable(data);
        } else {
            updateDeviceTable(sampleDevices);
        }
    }).fail(function(jqXHR, textStatus, errorThrown) {
        console.error('Error fetching devices:', textStatus, errorThrown);
        updateDeviceTable(sampleDevices); // Use sample devices on error
        $('#lastRefreshTime').text(new Date().toLocaleTimeString() + ' (sample data)');
    });

    // Refresh data every 30 seconds
    setInterval(function() {
        $.get('/api/proxy/data/current', function(data) {
            console.log('Updated data:', data);
            // Update UI with fresh data
            if (data && data.length > 0) {
                // Calculate total energy consumption
                let totalPower = 0;
                data.forEach(function(item) {
                    if (item.state && item.power) {
                        totalPower += parseFloat(item.power);
                    }
                });
                // Update power display if needed
                // $('.power-value').text(totalPower.toFixed(1) + ' W');
            }
        }).fail(function(jqXHR, textStatus, errorThrown) {
            console.error('Error fetching data/current:', textStatus, errorThrown);
        });

        $.get('/api/proxy/devices', function(data) {
            console.log('Updated devices:', data);
            if (data && data.length > 0) {
                updateDeviceTable(data);
            } else {
                updateDeviceTable(sampleDevices);
                $('#lastRefreshTime').text(new Date().toLocaleTimeString() + ' (sample data)');
            }
        }).fail(function(jqXHR, textStatus, errorThrown) {
            console.error('Error fetching devices:', textStatus, errorThrown);
            updateDeviceTable(sampleDevices); // Use sample devices on error
            $('#lastRefreshTime').text(new Date().toLocaleTimeString() + ' (sample data)');
        });
        
        // Update the last refresh time
        $('#lastRefreshTime').text(new Date().toLocaleTimeString());
    }, 30000); // Refresh every 30 seconds instead of 60
</script>
</body>
